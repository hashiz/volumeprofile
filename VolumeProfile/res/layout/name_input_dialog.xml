<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <TextView
        android:id="@+id/input_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_dialog_description"
        />
        
    <EditText
        android:id="@+id/input_dialog_edit"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:width="400dp"
	    android:inputType="text"
	    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle" 
        >

        <Button
            android:id="@+id/input_dialog_negative_button"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="?android:attr/buttonBarButtonStyle" 
            android:text="@string/input_dialog_negative_button"
            />

        <Button
            android:id="@+id/input_dialog_positive_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="?android:attr/buttonBarButtonStyle" 
            android:text="@string/input_dialog_positive_button"
            />

    </LinearLayout>

</LinearLayout>
