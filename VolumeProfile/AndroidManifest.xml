<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jp.meridiani.apps.volumeprofile"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:backupAgent=".backup.DataBackup">

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAI_XRjj0L3E2815Ek3Rsm-SptAK0QPjeu5QkuNog" />

        <activity
            android:name=".main.VolumeProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pluginapi.PluginEditActivity"
            android:label="@string/title_activity_plugin_edit" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".pluginapi.PluginFireReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".soundlevelalerthack.Receiver"
            android:exported="true"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="com.sonyericsson.media.SOUND_LEVEL_ALERT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".prefs.PreferencesActivity"
            android:label="@string/title_activity_preference"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.VolumeProfileActivity" />
        </activity>
        <activity
            android:name=".main.ProfileEditActivity"
            android:label="@string/title_activity_profile_edit"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.VolumeProfileActivity" />
        </activity>
    </application>

</manifest>
